extends layout

block content
  div.container
    div.row
      div(class="col s12")
        h1.center-align Login
    div.row
      form(class="col s12" method="POST" action="login")
        div.row
          div(class="col s12")
            input(type="text" id="username" name="username" class="validate" placeholder="Enter username:")
        div.row
          div(class="col s12")
            input(type="password" id="password" name="password" class="validate" placeholder="Enter password")
        div.row
          div(class="col s12 center-align")
            input(type="submit" name="submit" id="submit" class="btn waves-effect waves-light" value="Submit")
        
